<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#18971E" /> <!-- Dark green for pressed state -->
            <stroke android:width="1dp" android:color="#11CD1A" /> <!-- Dark green stroke -->
            <corners android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#06DC10" /> <!-- Green for default state -->
            <stroke android:width="1dp" android:color="#6A936C" /> <!-- Green stroke -->
            <corners android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
