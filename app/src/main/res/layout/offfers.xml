<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_pizzaItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/favLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plaintext_grey_theme"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgpizza"
            android:layout_width="162dp"
            android:layout_height="133dp"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/main" />

        <Space
            android:layout_width="24dp"
            android:layout_height="116dp"
            android:layout_weight="2" />

    </LinearLayout>

    <Space
        android:layout_width="38dp"
        android:layout_height="117dp"
        android:layout_weight="3" />

    <LinearLayout
        android:id="@+id/pizzaInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_weight="2" />


        <TextView
            android:id="@+id/pizza_offer"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="pizza Name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="184dp"
            android:layout_height="15dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/button_order"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#6A936C"
            android:text="Add To Order"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>