<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".ui.Pizza_menu.pizzaDialog">

    <LinearLayout
        android:id="@+id/maindit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pizza_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Type:  "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizza_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Name"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pizza_size_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size:  "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizza_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pizza_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:  "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizza_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10.99"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pizza_ingredients_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients:  "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizza_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomato, Cheese, Pepperoni"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>